@model IS7.Models.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Gender)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gender)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AdmitYear)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdmitYear)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GraduationYear)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GraduationYear)
        </dd>

    </dl>
    <table class="table table-condensed table-responsive">
        <tr>
            <th>
                Company Interviewed
            </th>
        </tr>
        @foreach (var interview in Model.Interviews)
        {
            <tr>
                <td>
                    <p>
                        @interview.InterviewCompany
                    </p>
                </td>
            </tr>
        }
    </table>

    <table class="table table-condensed table-responsive">
        <tr>
            <th>
                Previous Experience
            </th>
            <th>
                Previous Company
            </th>
        </tr>
        @foreach (var experience in Model.WorkHistories)
        {
            <tr>
                <td>
                    <p>
                        @experience.TitleName
                    </p>
                </td>                
                <td>
                    <p>
                        @experience.CompanyName
                    </p>
                </td>
            </tr>
        }
    </table>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MNumber }) |
    @Html.ActionLink("Back to List", "Index")
</p>
